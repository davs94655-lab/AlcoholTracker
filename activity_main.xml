<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍷 Трекер Алкоголя"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Основная статистика -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего выпито:"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/totalDrinksText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 мл"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <!-- Дневная статистика -->
        <TextView
            android:id="@+id/dailyTotalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выпито сегодня: 0 мл"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dailyAlcoholText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Чистого алкоголя: 0.0 г"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Уровень алкоголя -->
        <TextView
            android:id="@+id/alcoholLevelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔬 Алкоголь в крови: 0.000‰"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Статус - ПРОСТАЯ ВЕРСИЯ БЕЗ ФОНА -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Абсолютно трезв"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#E8F5E8"
            android:textColor="#22C55E"
            android:layout_marginBottom="16dp" />

        <!-- Время до трезвости -->
        <TextView
            android:id="@+id/timeToSoberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Трезв"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- История недели -->
        <TextView
            android:id="@+id/weekHistoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📈 Неделя: Пн: 0мл • Вт: 0мл • Ср: 0мл • Чт: 0мл • Пт: 0мл • Сб: 0мл • Вс: 0мл"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Кнопки действий -->
        <Button
            android:id="@+id/drinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Добавить напиток"
            android:textSize="18sp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/calendarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 Календарь"
                android:textSize="16sp"
                android:background="@color/secondary"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👤 Профиль"
                android:textSize="16sp"
                android:background="@color/secondary"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Сбросить сегодня"
            android:textSize="16sp"
            android:background="@color/error"
            android:textColor="@color/white"
            android:padding="12dp" />

        <!-- Добавьте после кнопки сброса -->
        <Button
            android:id="@+id/rouletteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎰 Крутить рулетку"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/rouletteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎰 Рулетка застолья"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Контейнер для рулетки -->
    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/roulette_background">

        <!-- Рулетка -->
        <ImageView
            android:id="@+id/roulette_background"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/roulette_background" />

        <!-- Стрелка -->
        <ImageView
            android:id="@+id/rouletteArrow"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/roulette_arrow" />

    </FrameLayout>

    <!-- Результат -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крутите рулетку!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/spinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крутить!"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</LinearLayout>